    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
    
          
  body
    // START OF BACKGROUND -------------------------------
    #bg
      img(alt="background" src="/images/background.jpg")
      
    // END OF BACKGROUND ---------------------------------
    
    // START OF NAVBAR --------------------------------
    nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
      .container-fluid
        // Container for the brand logo
        a.navbar-left.navbar-brand(href='#')
          img#brand-logo(alt='HAL' src='/images/hal.png')
        .project-name.navbar-nav.navbar-left
            span HAL
        // Container for the left and right portions of the navbar
        ul.nav.navbar-nav.navbar-right
          li
            a(href='#') Home
          li.active
            a(href='#') About HAL
          li
            a(href='#') Sign In
            
    // END OF NAVBAR-----------------------------------
    
    // START OF JUMBOTRON
    .jumbotron
      img(alt='HAL' src='/images/hal.png')
      p#welcome-text HAL - The Home ALarm System
      p#welcome-text Welcomes you...
      p#welcome-btn
        a.btn.btn-danger.btn-lg(href='http://localhost:3000/hal/video', role='button') View
    
    // END OF JUMBOTRON
    
    // Set up a socket
    script.
      var socket = io('http://localhost:3000/');
      console.log(socket);
      socket.on("streamVideo", function(data){
        console.log(data);
      });
      $('.btn-danger').on('click', function(){
        socket.emit("playVideo", "Client side request");
      });
      
    // START OF MAIN BODY
    .main-content-container
      block content
    
